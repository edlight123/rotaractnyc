rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function role() {
      return request.auth.token.role;
    }

    function isMember() {
      return isAuthenticated() && role() in ['member', 'board', 'treasurer', 'president'];
    }

    function isBoard() {
      return isAuthenticated() && role() in ['board', 'treasurer', 'president'];
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Max file size: 10 MB
    function isValidSize() {
      return request.resource.size < 10 * 1024 * 1024;
    }

    function isImage() {
      return request.resource.contentType.matches('image/.*');
    }

    // ── Profile Photos ──
    match /profile-photos/{userId}/{fileName} {
      allow read: if isMember();
      allow write: if isOwner(userId) && isImage() && isValidSize();
      allow delete: if isOwner(userId) || isBoard();
    }

    // ── Community Post Attachments ──
    match /post-attachments/{userId}/{fileName} {
      allow read: if isMember();
      allow write: if isOwner(userId) && isValidSize();
      allow delete: if isOwner(userId) || isBoard();
    }

    // ── Documents (meeting minutes, handbooks) ──
    match /documents/{fileName} {
      allow read: if isMember();
      allow write, delete: if isBoard();
    }

    // ── Event Images ──
    match /event-images/{eventId}/{fileName} {
      allow read: if true;
      allow write, delete: if isBoard();
    }

    // ── Gallery Images ──
    match /gallery/{fileName} {
      allow read: if true;
      allow write, delete: if isBoard();
    }

    // ── Article Images ──
    match /article-images/{fileName} {
      allow read: if true;
      allow write, delete: if isBoard();
    }

    // Deny everything else
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
